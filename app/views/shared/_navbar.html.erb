<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "favarin.png" %>
  <% end %>

  <div class="nav-search w-100 mr-auto">
    <%= form_tag products_path, method: :get do %>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Cerca qui il prodotto"  %>
    <% end %>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
        <i class="far fa-user avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup='true' aria-expanded='false'></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link log-in-link" do %>
          <div class="d-flex btn py-0 px-3">
            <i class="far fa-user"></i>
            <p class="log-in">LOGIN</p>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

